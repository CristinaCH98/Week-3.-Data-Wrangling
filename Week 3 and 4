# Problem 1. 

import sys

def read_fasta(file_path):
    with open(file_path, 'r') as file:
        lines = file.readlines()
    sequence = ''.join(line.strip() for line in lines if not line.startswith('>'))
    return sequence

def find_orfs(sequence):
    start_codon = 'ATG'
    stop_codons = {'TAA', 'TAG', 'TGA'}
    orfs = []

    for frame in range(3):
        for i in range(frame, len(sequence), 3):
            if sequence[i:i+3] == start_codon:
                for j in range(i + 3, len(sequence), 3):
                    codon = sequence[j:j+3]
                    if codon in stop_codons:
                        orfs.append(sequence[i:j+3])
                        break
    return orfs

def main():
    if len(sys.argv) != 2:
        print("Uso: python gene_finder.py <archivo_fasta>")
        sys.exit(1)

    fasta_file = sys.argv[1]

    try:
        sequence = read_fasta(fasta_file)
        orfs = find_orfs(sequence)

        if orfs:
            print("Se encontraron los siguientes marcos de lectura abiertos (ORFs):")
            for orf in orfs:
                print(orf)
        else:
            print("No se encontraron ORFs.")

    except FileNotFoundError:
        print(f"Error: Archivo '{fasta_file}' no encontrado.")
    except Exception as e:
        print(f"Ocurri√≥ un error: {e}")

if __name__ == "__main__":
    main()

#OUTPUT: python gene_finder.py input.fasta

